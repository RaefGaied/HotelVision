# MongoDB Atlas Configuration
# Remplacez <username>, <password>, et <cluster-name> avec vos vraies valeurs
MONGODB_URL=mongodb+srv://<username>:<password>@<cluster-name>.mongodb.net/<database-name>?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=votre_jwt_secret_key_ici_minimum_32_caracteres

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=votre_email@gmail.com
EMAIL_PASS=votre_mot_de_passe_app

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=votre_cloud_name
CLOUDINARY_API_KEY=votre_api_key
CLOUDINARY_API_SECRET=votre_api_secret

# Server Configuration
PORT=5000
NODE_ENV=development
